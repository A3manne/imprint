<?xml version="1.0" encoding="utf-8"?>
<!-- $Id$ -->
<extension type="component" version="1.7.0" method="upgrade">
	<name>COM_IMPRESSUM</name>
	
	<creationDate>21.11.2011</creationDate>
	<author>Impressum Reloaded Team</author>
	<authorEmail>gebhardtmathias@aol.com</authorEmail>
	<copyright>Copyright (c) 2011 Impressum Reloaded Team</copyright>
	<license>GNU/GPL, see LICENSE.txt</license>
	<version>3.0.1</version>
	<description>COM_IMPRESSUM_DESCRIPTION</description>

	<scriptfile>script.php</scriptfile>
	
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<files folder="site">
		<filename>index.html</filename>
		<filename>impressum.php</filename>
		<filename>controller.php</filename>
		
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<media destination="com_impressum" folder="media" >
		<filename>index.html</filename>
		<folder>images</folder>
	</media>
	
	<administration>
		<menu img="../media/com_impressum/images/recht.png">COM_IMPRESSUM</menu>
		
		<files folder="admin">
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>impressum.php</filename>
			
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>
</extension>
